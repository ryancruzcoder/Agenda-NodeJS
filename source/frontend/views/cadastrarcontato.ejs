<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastrar Contato</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
      div.responsive-table {
        overflow-x: auto;
      }
    </style>
  </head>
  <body>

    <!-- Cabeçalho  -->

    <header class="container-fluid bg-dark p-3">
      <div class="row">
        <div class="col d-flex align-items-center">
            <h4 class="navbar-brand text-light">Agenda</h4>
        </div>
        <div class="col">
            <ul class="nav justify-content-end">
              <li class="nav-item"><a href="/agenda/" class="nav-link text-secondary">Agenda</a></li>
              <li class="nav-item"><a href="/agenda/cadastrar-contato/" class="nav-link text-secondary">Cadastrar contato</a></li>
              <li class="nav-item"><a href="/" class="nav-link text-danger">Sair</a></li>
            </ul>
        </div>
      </div>
    
        
    </header>

    <!-- Título da Agenda -->

    <div class="container mt-4 text-center">
      <h1>Cadastrar Contato</h1>
      <p>Preencha o formulário abaixo:</p>
    </div>
    <% if (typeof contato === 'undefined') { %>
      <% contato = '' %>
    <% } %>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
              <% if (typeof alertType !== 'undefined' && typeof alertText !== 'undefined'){ %>
                <div class="alert alert-<%=alertType%> fade show alert-dismissible">
                    <%=alertText%>
                    <button class="btn-close" data-bs-dismiss="alert"></button>
                </div>
              <% } %>
              <form class="col" action="/agenda/cadastrar-contato/" method="post">
                <div class="mb-3">
                  <label for="nome-de-cadastro" class="form-label">Nome:</label>
                  <input type="text" class="form-control" id="nome-de-cadastro" name="nome-de-cadastro" aria-describedby="emailHelp" value="<%=contato.nome%>" required>
                </div>
                <div class="mb-3">
                  <label for="sobrenome-de-cadastro" class="form-label">Sobrenome:</label>
                  <input type="text" class="form-control" id="sobrenome-de-cadastro" name="sobrenome-de-cadastro" aria-describedby="emailHelp"  value="<%=contato.sobrenome%>" required>
                </div>
                <div class="mb-3">
                  <label for="email-de-cadastro" class="form-label">E-mail:</label>
                  <input type="email" class="form-control" id="email-de-cadastro" name="email-de-cadastro" aria-describedby="emailHelp" value="<%=contato.email%>" required>
                </div>
                <div class="mb-3">
                  <label for="telefone-de-cadastro" class="form-label">Telefone:</label>
                  <input type="text" class="form-control" id="telefone-de-cadastro" name="telefone-de-cadastro" pattern="[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]"  value="<%=contato.telefone%>" required>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
              </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>